<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".MainActivity.SignUp">
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/lpb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone" />
    <ImageView
        android:layout_width="120dp"
        android:id="@+id/google_login_button"
        android:layout_centerHorizontal="true"
        android:layout_height="120dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/logoo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arimo"
        android:text="Hello,"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:id="@+id/welcome"
        android:layout_below="@id/google_login_button"
        android:textColor="@color/white"
        android:textSize="40dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arimo"
        android:text="Welcome to TextSnap"
        android:layout_marginStart="30dp"
        android:id="@+id/sellify"
        android:layout_below="@id/welcome"
        android:textColor="@color/white"
        android:textSize="25dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/sellify"
        android:layout_marginTop="10dp"
        android:background="@drawable/login"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/label"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/start"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#808080"
                android:layout_toStartOf="@id/center"
                android:layout_toEndOf="@id/start"
                android:id="@+id/log"
                android:padding="5dp"
                android:fontFamily="@font/arimo"
                android:textAlignment="center"
                android:text="Log In"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_toEndOf="@id/center"
                android:layout_toStartOf="@id/end"
                android:textAlignment="center"
                android:layout_marginHorizontal="30dp"
                android:layout_below="@id/log"
                android:background="@color/blue"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_toEndOf="@id/center"
                android:textAlignment="center"
                android:textSize="20dp"
                android:id="@+id/signup"
                android:textColor="#808080"
                android:padding="5dp"
                android:fontFamily="@font/arimo"
                android:layout_toStartOf="@id/end"
                android:layout_height="wrap_content"
                android:text="Sign Up"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/end"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/label"
            android:layout_height="10dp"
            android:id="@+id/profile"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/login_username"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/line"
            android:layout_below="@id/profile"
            android:hint="Username"
            android:textColor="@color/black"
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/username" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/login_email"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/line"
            android:layout_below="@id/login_username"
            android:hint="Email"
            android:textColor="@color/black"
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/email" /> <!-- Palitan ang `your_image` ng resourse ID ng iyong larawan -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/login_password"
            android:layout_below="@id/login_email"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/pass"
            android:padding="8dp"
            android:background="@drawable/line"
            android:layout_marginHorizontal="30dp"
            android:hint="Password"
            android:textColor="@color/black"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/editTextConfirmPassword"
            android:layout_below="@id/login_password"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/pass"
            android:padding="8dp"
            android:background="@drawable/line"
            android:layout_marginHorizontal="30dp"
            android:hint="Confirm Password"
            android:textColor="@color/black"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Signup"
            android:layout_below="@id/editTextConfirmPassword"
            android:onClick="registerWithGoogle"
            android:id="@+id/google_sign_in_button"
            android:textSize="18sp"
            android:fontFamily="@font/arimo"
            android:layout_marginHorizontal="50dp"
            android:backgroundTint="@color/blue"
            android:layout_marginTop="20dp"
            app:cornerRadius = "20dp"/>
        <TextView
            android:id="@+id/signUpRedirectText"
            android:layout_width="wrap_content"
            android:layout_below="@id/google_sign_in_button"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:text="Already have a account? Login"
            android:textAlignment="center"
            android:textSize="18sp" />
    </RelativeLayout>
</RelativeLayout>